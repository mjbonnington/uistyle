/* QLineEdit
 * =========
 */

QLineEdit {
	padding: 1px 2px 2px 1px;
	min-width: 8em;
	min-height: 3ex;
	min-height: 22px;
	border: 1px solid rgb(%group-header%);
	background: rgb(%base%);
}

QLineEdit:read-only {
	/*border-color: transparent;*/
	background: transparent;
}

QLineEdit:disabled {
	background: transparent;
}

/*QLineEdit:focus {
