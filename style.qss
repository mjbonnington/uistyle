/* Buttons
 * =======
 */

QAbstractButton {
	border: 2px solid #666;
	border-color: transparent;
	border-radius: 0;
}

QAbstractButton::menu-indicator {
	image: url(:/images/popup_indicator.png);
	subcontrol-position: right center;
	subcontrol-origin: padding;
	left: -2px;
}

QAbstractButton::menu-indicator:disabled {
	image: url(:/images/popup_indicator_disabled.png);
}

/* Push Button */

QPushButton {
	min-width: 8em;
	min-height: 3ex;
	min-height: 18px;
	padding: 1px 2px 2px 1px;
	background: rgba(102, 102, 102);
	border-radius: 0;
}

QPushButton:default {
	background: rgba(112, 158, 50, 75%);
}

QPushButton:hover {
	background: #777;
}

QPushButton:pressed, QPushButton:checked:pressed {
	padding: 2px 1px 1px 2px;
	background: #3c3c3c;
}

QPushButton:checked {
	padding: 2px 1px 1px 2px;
	background: #333;
}

QPushButton:disabled {
	background: rgba(102, 102, 102, 20%);
	color: #444;
}

/* Tool Button / Flat Push Button */

QPushButton:flat {
	margin: 0;
	background: #4c4c4c;
	border: 2px solid transparent;
}

QPushButton:flat:hover, QToolButton:hover {
	border-color: rgba(112, 158, 50, 100%);
}

QPushButton:flat:pressed, QPushButton:flat:checked:pressed {
	background: #3c3c3c;
}

QPushButton:flat:checked {
	background: #333;
}

QPushButton:flat:disabled {
	background: transparent;
}

QPushButton::menu-indicator {
	image: url(:/images/popup_indicator.png);
	subcontrol-position: right center;
	subcontrol-origin: padding;
	left: -2px;
}

/* Tool Button */

QToolButton {
	padding: 1px 2px 2px 1px;
	background: #4c4c4c;
	border: 2px solid transparent;
	/*border-radius: 3px;*/
}

QToolButton:pressed, QToolButton:checked:pressed {
	padding: 2px 1px 1px 2px;
	background: #3c3c3c;
}

QToolButton:checked {
	padding: 2px 1px 1px 2px;
	background: #333;
	/*border-color: #333;*/
}

QToolButton:disabled {
	background: transparent;
}

QToolButton[popupMode="MenuButtonPopup"] { /* only for MenuButtonPopup */
	padding-right: 16px;
}

QToolButton[popupMode="InstantPopup"] { /* only for InstantPopup */
	padding-right: 16px;
}

/* the subcontrols below are used only in the MenuButtonPopup mode */
QToolButton::menu-button {
	border-left: 1px solid #444;
	/*border-top-right-radius: 6px;*/
	/*border-bottom-right-radius: 6px;*/
	/* 16px width + 4px for border = 20px allocated above */
	width: 17px;
}

/*QToolButton::menu-arrow {
	image: url(:/images/arrow_down.png);
}*/

/*QToolButton::menu-arrow:open {
	top: 1px;
	left: 1px;
}*/

QToolButton::menu-indicator {
	image: url(:/images/popup_indicator.png);
	subcontrol-position: right bottom;
	subcontrol-origin: padding;
	top: -2px;
	left: -2px;
}

QToolButton::menu-indicator:disabled {
	image: url(:/images/popup_indicator_disabled.png);
}

/* Buttons */



/* Check Box
 * =========
 *
 * Requires the following images:
 *
 * checkbox_checked.png
 * checkbox_checked_disabled.png
 * checkbox_indeterminate.png
 * checkbox_indeterminate_disabled.png
 */

QCheckBox {
	padding: 3px;
	spacing: 5px;
	border: none;
	background: none;
}

QCheckBox::indicator {
	width: 9px;
	height: 9px;
	background: #222;
	border: 2px solid #222;
	border-radius: 0;
}

QCheckBox::indicator:hover, QGroupBox::indicator:hover {
	border-color: rgba(112, 158, 50, 100%);
}

QCheckBox::indicator:checked, QGroupBox::indicator:checked {
	image: url(:/images/checkbox_checked.png);
}

QCheckBox::indicator:checked:disabled, QGroupBox::indicator:checked:disabled {
	image: url(:/images/checkbox_checked_disabled.png);
}

QCheckBox::indicator:indeterminate {
	image: url(:/images/checkbox_indeterminate.png);
}

QCheckBox::indicator:indeterminate:disabled {
	image: url(:/images/checkbox_indeterminate_disabled.png);
}

/* End Check Box */



/* Radio Button
 * ============
 *
 * Requires the following images:
 *
 * radiobutton_checked.png
 * radiobutton_checked_disabled.png
 */

QRadioButton {
	padding: 3px;
	spacing: 5px;
	border: none;
	background: none;
}

QRadioButton::indicator {
	width: 8px;
	height: 8px;
	background: #222;
	border: 2px solid #222;
	border-radius: 6px;
}

QRadioButton::indicator:hover {
	border-color: rgba(112, 158, 50, 100%);
}

QRadioButton::indicator:checked {
	image: url(:/images/radiobutton_checked.png);
}

QRadioButton::indicator:checked:disabled {
	image: url(:/images/radiobutton_checked_disabled.png);
}

/*QRadioButton::indicator:pressed {
}*/

/* End Radio Button */



/* Group Box
 * =========
 *
 * Requires the following images:
 *
 * checkbox_checked.png
 * checkbox_checked_disabled.png
 */

QGroupBox {
	margin: 0;
	margin-top: 20px; /* leave space at the top for the title */
	border-radius: 5px;
	background: rgba(153, 153, 153, 5%);
}

QGroupBox:flat, QGroupBox:disabled {
	background: transparent;
}

QGroupBox::title {
	bottom: 16px; /* was: 3ex */
}

QGroupBox::title:disabled {
	color: #666;
}

QGroupBox::indicator {
	width: 9px;
	height: 9px;
	background: #222;
	border: 2px solid #222;
	border-radius: 0;
}

/* Custom widget for expandable rollout group */
QGroupBox[expandable="true"] {
	margin: 0;
	/*margin-top: 20px;*/
	padding: 0;
	border: 1px solid #4c4c4c;
	border-top: 20px solid #4c4c4c;
	border-radius: 0;
	border-bottom-left-radius: 2px;
	border-bottom-right-radius: 2px;
	/*background: #4c4c4c;*/
}

QGroupBox[expandable="true"]::title {
	height: 20px;
	margin: 0;
	padding: 3px 6px;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	border: none;
	border-radius: 0;
	/*subcontrol-origin: margin;
	subcontrol-position: top center;*/
	background: #4c4c4c;
}

/*QGroupBox[expandable="true"]::title:hover {
	background: #555;
}*/

QGroupBox[expandable="true"]::indicator {
	width: 11px;
	height: 11px;
	margin: 0;
	padding: 0;
	border: none;
	border-radius: 0;
	border-image: none;
	background: none;
	image: url(:/images/arrow_right.png);
}

QGroupBox[expandable="true"]::indicator:disabled {
	image: url(:/images/arrow_right_disabled.png);
}

QGroupBox[expandable="true"]::indicator:checked {
	image: url(:/images/arrow_down.png);
}

QGroupBox[expandable="true"]::indicator:checked:disabled {
	image: url(:/images/arrow_down_disabled.png);
}

/* End Group Box */



/* Splitter
 * ========
 */

QSplitter::handle {
	background: transparent;
}

QSplitter::handle:hover {
	background: #777;
}

QSplitter::handle:horizontal {
	width: 5px;
}

QSplitter::handle:vertical {
	height: 5px;
}

QSplitter::handle:pressed {
	background: #555;
}

/* End Splitter */



/* Combo Box
 *
 */

QComboBox {
	min-width: 6em;
	min-height: 3ex;
	min-height: 18px;
	padding: 1px 2px 2px 5px;
	/*border: 1px solid #222;*/
	border-radius: 0;
}

QComboBox:editable {
	/*padding-left: 1px;*/
	padding: 1px 6px 2px 1px;
	background: #222;
	border-color: #555;
}

QComboBox:!editable, QComboBox::drop-down:editable {
	background: rgba(102, 102, 102);
}

QComboBox:!editable:hover, QComboBox::drop-down:editable:hover {
	background: #777;
}

/* QComboBox gets the "on" state when the popup is open */
QComboBox:!editable:on, QComboBox::drop-down:editable:on {
	background: #333;
}

QComboBox:!editable:on {
	padding: 2px 1px 1px 6px;
}

QComboBox::drop-down {
	subcontrol-origin: padding;
	subcontrol-position: top right;
	width: 17px;
	/*border-top-right-radius: 2px;
	border-bottom-right-radius: 2px;*/
}

QComboBox::drop-down:!editable {
	border-left-width: 1px;
	border-left-color: rgba(34, 34, 34, 25%);
	border-left-style: solid;
}

/*QComboBox::drop-down:editable {
	border: 1px solid #222;
}*/

QComboBox:disabled {
	background: transparent;
}

QComboBox::drop-down:disabled {
	background: transparent;
	border-color: transparent;
}

QComboBox::down-arrow {
	image: url(:/images/arrow_down.png);
}

QComboBox::down-arrow:disabled {
	image: url(:/images/arrow_down_disabled.png);
}

QComboBox::down-arrow:on {
	top: 1px;
	left: 1px;
}

/* Background color of popup-list. */ 
