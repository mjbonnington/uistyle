/* End Combo Box */



/* Line Edit
 *
 */

QLineEdit {
	min-width: 8em;
	min-height: 3ex;
	min-height: 18px;
	padding: 1px 2px 2px 1px;
	/*border: 1px solid #555;*/
	border: none;
	background: #222;
}

QLineEdit:disabled, QLineEdit:read-only {
	background: transparent;
}

QLineEdit:no-frame {
	background: transparent;
	border-color: transparent;
}

/* End Line Edit */



/* Spin Box
 *
 */

QAbstractSpinBox {
	min-height: 3ex;
	min-height: 18px;
	padding: 1px 2px 2px 1px;
	/*border: 2px solid #444;*/
	border: 0;
	background: #222;
}

QAbstractSpinBox:disabled, QAbstractSpinBox:read-only {
	background: transparent;
}

QAbstractSpinBox::up-button {
	subcontrol-origin: padding; /*border*/
	subcontrol-position: top right;
	padding: 1px 0 2px 0;
	width: 15px;
	/*border-bottom-width: 0;*/
	background: rgba(102, 102, 102);
}

QAbstractSpinBox::up-button:hover {
	background: #777;
}

QAbstractSpinBox::up-button:pressed {
	/*padding: 2px 0 1px 1px;*/
	background: #333;
}

QAbstractSpinBox::up-button:disabled, 
QAbstractSpinBox::up-button:off {
	border-color: transparent;
	background: transparent;
}

QAbstractSpinBox::up-arrow {
	image: url(:/images/arrow_up.png);
}

QAbstractSpinBox::up-arrow:pressed {
	top: 1px;
	left: 1px;
}

QAbstractSpinBox::up-arrow:disabled, 
QAbstractSpinBox::up-arrow:off { /* off state when value is max */
	image: url(:/images/arrow_up_disabled.png);
}

QAbstractSpinBox::down-button {
	subcontrol-origin: padding; /*border*/
	subcontrol-position: bottom right;
	padding: 1px 0 2px 0;
	width: 15px;
	/*border-top-width: 0;*/
	background: rgba(102, 102, 102);
}

QAbstractSpinBox::down-button:hover {
	background: #777;
}

QAbstractSpinBox::down-button:pressed {
	/*padding: 2px 0 1px 1px;*/
	background: #333;
}

QAbstractSpinBox::down-button:disabled, 
QAbstractSpinBox::down-button:off {
	border-color: transparent;
	background: transparent;
}

QAbstractSpinBox::down-arrow {
	image: url(:/images/arrow_down.png);
}

QAbstractSpinBox::down-arrow:pressed {
	top: 1px;
	left: 1px;
}

QAbstractSpinBox::down-arrow:disabled, 
QAbstractSpinBox::down-arrow:off { /* off state when value is min */
	image: url(:/images/arrow_down_disabled.png);
}

/* End Spin Box */



/* Scrollbar
 *
 */

QScrollBar {
	margin: 0;
	padding: 0;
	background: transparent;
	border: 0;
	/*border: 1px solid #222;*/
}

QScrollBar:horizontal {
	margin: 0 17px;
	/*min-height: 15px;*/
}

QScrollBar:vertical {
	margin: 17px 0;
	/*min-width: 15px;*/
}

QScrollBar::add-page, QScrollBar::sub-page {
	background: #333;
}

QScrollBar::add-page:pressed, QScrollBar::sub-page:pressed {
	background: #444;
}

QScrollBar::handle {
	background: rgba(102, 102, 102);
	/*image: url(:/images/scrollbar_handle.png);*/
	/*border-radius: 7px;*/
}

QScrollBar::handle:pressed, QScrollBar::handle:hover {
	background: #777;
}

QScrollBar::handle:horizontal {
	min-width: 20px;
	margin: 0 1px;
}

QScrollBar::handle:vertical {
	min-height: 20px;
	margin: 1px 0;
}

QScrollBar::add-line, QScrollBar::sub-line {
	padding: 1px;
	subcontrol-origin: margin;
	background: rgba(102, 102, 102);
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
	width: 15px;
}

QScrollBar::add-line:horizontal {
	subcontrol-position: right;
}

QScrollBar::sub-line:horizontal {
	subcontrol-position: left;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
	height: 15px;
}

QScrollBar::add-line:vertical {
	subcontrol-position: bottom;
}

QScrollBar::sub-line:vertical {
	subcontrol-position: top;
}

QScrollBar::add-line:hover, QScrollBar::sub-line:hover {
	background: #777;
}

QScrollBar::add-line:pressed, QScrollBar::sub-line:pressed {
	padding: 2px 0 0 2px;
	background: #333;
}

QScrollBar::add-line:disabled, QScrollBar::sub-line:disabled {
	background: transparent;
}

QScrollBar::handle:disabled {
	background: rgba(102, 102, 102, 25%);
}

QScrollBar::add-page:disabled, QScrollBar::sub-page:disabled {
	background: rgba(51, 51, 51, 25%);
}


QScrollBar:left-arrow:horizontal {
	image: url(:/images/arrow_left.png);
}

QScrollBar::right-arrow:horizontal {
	image: url(:/images/arrow_right.png);
}

QScrollBar:up-arrow:vertical {
	image: url(:/images/arrow_up.png);
}

QScrollBar::down-arrow:vertical {
	image: url(:/images/arrow_down.png);
}

QScrollBar:left-arrow:horizontal:disabled {
	image: url(:/images/arrow_left_disabled.png);
}

QScrollBar::right-arrow:horizontal:disabled {
	image: url(:/images/arrow_right_disabled.png);
}

QScrollBar:up-arrow:vertical:disabled {
	image: url(:/images/arrow_up_disabled.png);
}

QScrollBar::down-arrow:vertical:disabled {
	image: url(:/images/arrow_down_disabled.png);
}

/* End Scrollbar */



/* Slider
 *
 */

QSlider:horizontal {
	height: 17px;
}

QSlider::vertical {
	width: 17px;
}

QSlider::groove {
	background: #222;
	/*border: 1px solid #222;
	border-radius: 2px;*/
}

QSlider::groove:horizontal {
	height: 5px;
}

QSlider::groove:vertical {
	width: 5px;
}

QSlider::groove:disabled {
	background: transparent;
}

QSlider::handle {
	background: rgba(102, 102, 102);
	/*border: 1px solid #222;*/
	border-radius: 3px;
}

QSlider::handle:horizontal {
	width: 9px;
	margin: -6px 0;
}

QSlider::handle:vertical {
	height: 9px;
	margin: 0 -6px;
}

QSlider::handle:hover {
	background: #777;
}

QSlider::handle:pressed {
	background: #333;
}

QSlider::handle:disabled {
	background: rgba(102, 102, 102, 25%);
}

/* End Slider */



/* Progress Bar
 * ============
 */

QProgressBar {
	background: rgba(51, 51, 51, 50%);
	border: 0;
	border-radius: 0;
	text-align: center;
}

QProgressBar::chunk {
	background: rgba(112, 158, 50, 100%);
	width: 1px;
}

QProgressBar:disabled {
	background: rgba(51, 51, 51, 25%);
}

QProgressBar::chunk:disabled {
	background: rgba(102, 102, 102, 50%);
}

/* End Progress Bar */



/* Status Bar
 * ==========
 */

QStatusBar {
	background: #333;
}

